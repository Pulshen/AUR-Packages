# Maintainer: Pulshen Sudokamikaze <github.com/sudokamikaze>


pkgname=obmonitor-git
pkgver=0.1
pkgrel=1
pkgdesc='Openbox monitor helper'
arch=('any')
url='http://github.com/sudokamikaze'
depends=('openbox' 'bash')
makedepends=('git')
provides=('obmonitor')
source=('git+https://github.com/Sudokamikaze/Openbox-Monitor.git')
sha256sums=('SKIP')

pkgver() {
  cd Openbox-Monitor

  echo "0.r$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}

package() {
  cd Openbox-Monitor

sudo install -m 755 obmonitor.sh /bin/obmonitor
sudo install -m 755 obmonitor-autostart.sh /bin/obmonitor-autostart
}

# vim: ts=2 sw=2 et:
